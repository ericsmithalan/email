{
    "name": "@email/client",
    "version": "1.0.0",
    "private": true,
    "main": "cjs/index.js",
    "types": "cjs/index.d.ts",
    "scripts": {
        "clean": "rimraf ./cjs",
        "prebuild": "yarn clean",
        "start": "razzle start",
        "build:dev": "razzle build",
        "test": "razzle test --env=jsdom",
        "start:prod": "NODE_ENV=production node cjs/server.js"
    },
    "files": [
        "cjs",
        "umd",
        "src"
    ],
    "dependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-react": "^7.9.4",
        "@email/css": "^1.0.0",
        "@email/element": "^1.0.0",
        "@types/jest": "^25.2.1",
        "@types/react-router-dom": "^5.1.5",
        "@types/webpack-env": "^1.15.2",
        "razzle": "^3.1.0",
        "razzle-plugin-react": "^3.1.0",
        "razzle-plugin-typescript": "^3.1.0",
        "react-router-dom": "^5.1.2",
        "ts-jest": "^25.4.0",
        "tslint": "^6.1.2",
        "tslint-react": "^5.0.0"
    },
    "peerDependencies": {
        "react": ">=16",
        "react-dom": ">=16"
    },
    "jest": {
        "transform": {
            "\\.(ts|tsx)$": "ts-jest",
            "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
        },
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
            "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}"
        ]
    },
    "devDependencies": {
        "fork-ts-checker-webpack-plugin": "^4.1.3"
    }
}
