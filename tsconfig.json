{
    "compilerOptions": {
        "jsx": "react",
        "lib": ["es2018", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./",
        "noEmit": false,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "sourceMap": true,
        "declarationMap": true,
        "baseUrl": "./",
        "declaration": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es5",
        "paths": {
            "@email/*": ["./node_modules/@email/*/src"]
        }
    },
    "files": [],
    "references": [{ "path": "./packages/email-css" }, { "path": "./packages/email-element" }],
    "include": ["packages", "dist"],
    "exclude": ["node_modules", "dist"]
}
