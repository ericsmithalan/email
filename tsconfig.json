{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "esModuleInterop": true,
        "paths": {
            "@email/*": ["packages/*/src"]
        }
    },
    "exclude": [
        "node_modules",
        "webpack",
        "dist",
        "packages/*/cjs",
        "packages/*/esm",
        "packages/*/dist"
    ]
}
