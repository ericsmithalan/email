{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "esnext",
        "preserveSymlinks": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017", "DOM.Iterable", "ES2019"],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@email/*": ["packages/*/src"]
        }
    },
    "references": [
        { "path": "packages/css" },
        { "path": "packages/elemens" },
        { "path": "packages/components" },
        { "path": "packages/client" }
    ],
    "include": ["packages"],
    "exclude": ["packages/*/dist"]
}
