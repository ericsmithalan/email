{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "es6",
        "jsx": "preserve",
        "lib": ["es6", "DOM"],
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@email/*": ["packages/*/src"]
        }
    },
    "include": ["packages"],
    "exclude": ["packages/*/cjs", "packages/*/esm", "packages/*/dist"]
}
