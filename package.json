{
    "name": "email",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "build": "lerna run build --stream --parallel",
        "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "pretest": "yarn typecheck && yarn lint",
        "test": "yarn test:unit",
        "start": "yarn start:client",
        "start:client": "yarn workspace @email/client start",
        "typecheck": "tsc --noEmit",
        "prettify": "npx prettier \"./**/*.{js,ts,tsx}\" --write"
    },
    "devDependencies": {
        "@types/node": "^13.13.5",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.7",
        "lerna": "^3.20.2",
        "rimraf": "^3.0.2",
        "tsconfig-paths": "^3.9.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "@types/underscore": "^1.10.0",
        "tsc-watch": "^4.2.3",
        "eslint": "^7.0.0",
        "tslint": "^6.1.2",
        "tslint-react": "^5.0.0"
    },
    "dependencies": {
        "csstype": "^2.6.10",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "typescript": "^3.8.3",
        "underscore": "^1.10.2"
    }
}